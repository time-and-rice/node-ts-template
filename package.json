{
  "name": "node-ts-template",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "time-and-rice <time.and.rice@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc",
    "start": "dotenv -e .env.production -- node -r module-alias/register .",
    "dev": "dotenv -e .env.development -- nodemon -r tsconfig-paths/register ./src/index.ts",
    "lint": "eslint \"./{src,test}/**/*.{js,ts}\"",
    "lint:fix": "yarn lint --fix",
    "format": "prettier -l \"./{src,test}/**/*.{js,ts,json}\"",
    "format:fix": "yarn format --write"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "dependencies": {
    "dotenv-cli": "^7.2.1",
    "express": "^4.18.2",
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.7",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
